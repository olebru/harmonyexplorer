<button
    class="text-left bg-blue-100 py-0 px-0 w-full focus:outline-none text-xs md:text-sm lg:text-base @(hidden ? "text-blue-100" : "text-blue-900")"
    @onclick="ShowDetails">
    <div class="inline-flex">
        <div class="text-sm md:text-base">@chord.PlainTextChordWithOutModifiers(extension)</div>
        <div class="text-xs md:text-sm">@chord.Modifiers(extension)</div>
    </div>
</button>
@if (chord.ShowDetails)
{
    <ChordDetailViewComponent chord="@chord" modeWithChords="@modeWithChords" extension="@extension" />
}
